<h1>Listing Questions</h1>
<p>Total: <%= @questions.size %></p>
<p><%= link_to 'New Question', new_question_path, class: 'button success' %></p>
<table border="1">
  <tr>
    <th>Text</th>
    <th>Choices</th>
    <th colspan="3">Opciones</th>
  </tr>
  <% @questions.each do |question| %>
  <tr>
    <td><%= question.text %></td>
    <td>
      <ul>
        <% question.choices.each do |choice| %>
        <li>
          <%= choice.text %>
          <% if choice.correct==1 %>(Correct)<% end %>
        </li>
            <% end %>
      </ul>
    </td>
    <td><%= link_to 'Show', question, class: 'button info' %></td>
    <td><%= link_to 'Edit', edit_question_path(question), class: 'button success' %></td>
    <td><%= link_to 'Destroy', question, :confirm => 'Â¿Estas seguro?', :method => :delete, class: 'button alert' %></td>
  </tr>
  <% end %>
</table>
<% content_for( :title) do %>
All questions
<% end %>
